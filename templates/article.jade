
extends layout

append head
  link(rel="stylesheet", href="article.css")


block prepend title
  !{page.title} - 

block content
  article.post
    header
      h1= page.title
      #metadata
        time.publishDate(datetime=moment(page.date).format('YYYY-MM-DD'))= moment(page.date).format('MMMM Do, YYYY')

    section.content!= page.html

block footer
  a.back(href='/') Home
  |  &middot; 
  a(href='/archive.html') Archive
