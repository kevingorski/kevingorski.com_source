
extends layout


block prepend title
  !{page.title} - 

block content
  include author
  article.post
    h1= page.title
    time.publishDate(datetime=moment(page.date).format('YYYY-MM-DD'))= moment(page.date).format('MMMM Do, YYYY')
    section.content!= page.html

block footer
  p
    a.back(href='/') Home
    |  &middot; 
    a(href='/archive.html') Archive
