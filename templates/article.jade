
extends layout

block prepend title
  #{ page.title } -

block header
  include author
  h1= page.title
  p
    | by 
    mixin author(page.metadata.author)

block content
  article.post
    section.content!= page.html

block footer
  p
    a.back(href='/') Home
    |  &middot; 
    a(href='/archive.html') Archive
